{
    "name": "atoum/atoum-bundle",
    "description": "Bundle around atoum unit testing framework",
    "type": "symfony-bundle",
    "keywords": ["atoum", "test", "unit testing"],
    "homepage": "https://github.com/atoum/AtoumBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Lonqueu-Brochard",
            "email": "dev@florianlb.fr"
        },
        {
            "name": "Community contributors",
            "homepage": "https://github.com/atoum/AtoumBundle/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": ">=7",
        "symfony/console": ">=7",
        "symfony/finder": ">=7",
        "symfony/dom-crawler": ">=7",
        "symfony/css-selector": ">=7",
        "atoum/atoum": "^4.4.1",
        "fakerphp/faker": "^1.23",
        "ext-dom": "*"
    },
    "require-dev": {
        "symfony/form": "7.*",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-symfony": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.64",
        "rector/rector": "^1.2",
        "atoum/stubs": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "atoum\\AtoumBundle\\": "",
            "atoum\\AtoumBundle\\PHPStan\\": "phpstan/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "test": "php bin/atoum",
        "test-coverage": "php bin/atoum --enable-branch-and-path-coverage",
        "test-coverage-html": "php bin/atoum --enable-branch-and-path-coverage --coverage-html coverage",
        "test-no-coverage": "php bin/atoum --no-code-coverage",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.5-dev"
        },
        "symfony": {
            "allow-contrib": true,
            "require": ">=7"
        }
    }
}
